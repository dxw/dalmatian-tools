#!/bin/bash

# exit on failures
set -e
set -o pipefail

usage() {
  echo "Check if awscli is installed and compatible with dalmatian-tools"
  exit 1
}

while getopts "i:h" opt; do
  case $opt in
    h)
      usage
      ;;
    *)
      usage
      ;;
  esac
done

# Check if awscli is installed
if ! command -v aws &> /dev/null
then
    echo "awscli is not installed"
    exit 1
fi

# Check awscli version
version=$(aws --version 2>&1 | cut -d' ' -f1 | cut -d'/' -f2)

if [[ $version == "2"* ]]
then
    echo "awscli version 2 is installed"
else
    echo "awscli version 2 is not installed which is required for dalmatian-tools"
    exit 1
fi
