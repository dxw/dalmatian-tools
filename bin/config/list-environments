#!/bin/bash
"$APP_ROOT/bin/dalmatian-refresh-config" > /dev/null
usage() {
  echo "List environment names (e.g. 'staging' or 'prod') for an infrastructure"
  echo "Usage: $(basename "$0") <infrastructure name [OPTIONAL]>" 1>&2
  echo "  -h                     - help"
  exit 1
}
INFRASTRUCTURE_NAME="${1:-}"
while getopts "h" opt; do
  case $opt in
    h)
      usage
      exit;;
    *)
      usage
      exit;;
  esac
done

INFRASTRUCTURES=$(yq e -o=json ".infrastructures" "$APP_ROOT/bin/tmp/dalmatian-config/dalmatian.yml")

if [ -z "$INFRASTRUCTURE_NAME" ]
then
  echo "$INFRASTRUCTURES" | jq -r 'keys[] as $i | "\($i): \(.[$i].environments? | keys[])"'
else
  echo "$INFRASTRUCTURES" | jq -r --arg i "$INFRASTRUCTURE_NAME" '"\($i): \(.[$i].environments | keys[])"'
fi
