#!/bin/bash

# exit on failures
set -e
set -o pipefail

"$APP_ROOT/bin/dalmatian-refresh-config" > /dev/null

usage() {
  echo "Description: List services for an infrastructure"
  echo
  echo "Usage: dalmatian config $(basename "$0") [infrastructure]" 1>&2
  echo "  -h                     Get help with this command"
  echo
  echo "Options:"
  echo "  [infrastructure]       Name of the infrastructure you want to target"
  exit 1
}

INFRASTRUCTURE_NAME="${1:-}"

while getopts "h" opt; do
  case $opt in
    h)
      usage
      exit;;
    *)
      usage
      exit;;
  esac
done

INFRASTRUCTURES=$(yq e -o=json ".infrastructures" "$APP_ROOT/bin/tmp/dalmatian-config/dalmatian.yml")

if [ -z "$INFRASTRUCTURE_NAME" ]
then
  echo "$INFRASTRUCTURES" | jq -r '(. | keys[]) as $i | "\($i): \(.[$i].services[]?.name )"'
else
  echo "$INFRASTRUCTURES" | jq -r --arg i "$INFRASTRUCTURE_NAME" '"\($i): \(.[$i].services?[].name)"'
fi
